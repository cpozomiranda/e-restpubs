

<% if can? :read, Request %> 

<div class="col-md-10">
  <h1>Administrar Pedidos</h1>
  <br>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Mesa NÂ°</th>
        <th>Comentario</th>
        <th>Ordenes</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |request| %>
      <tr>
        <td><%= request.table.number %></td>
        <td><%= request.comment %></td>
        <td><%= request.orders.count %></td>
        <td><%= link_to "".html_safe, request_path(request.id) ,:id => "button_id", :class => "btn btn-primary glyphicon glyphicon-refresh" %>
        <%= link_to "".html_safe, request_close_table_path(request),:id => "button_id", :class => "btn btn-success glyphicon glyphicon-ok" %>
        <%= link_to "".html_safe, request, method: :delete, data: { confirm: 'Estas seguro ?' } ,:id => "button_id", :class => "btn btn-danger glyphicon glyphicon-trash" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
 
</div>

<% end %>