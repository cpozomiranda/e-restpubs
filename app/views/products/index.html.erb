
<div class="container col-md-10">
<h1>Productos</h1>

  
<div class="row">
<div class="btn btn-default" style="float: right; margin-right: 25px;">
<%= form_tag(products_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Buscar Producto" %>
    <%= submit_tag "Buscar", :name => nil %>
<% end %>
</div>
</div>
<br>
<br>

<div style="overflow-y: scroll; height: 300px"  class="table-responsive">
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.photo, size: "60x40") %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'ver', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>








