<p id="notice"><%= notice %></p>
<div class="container">
<h1 class="col-md-6">Administrador de productos</h1>
<br>
<br>
<br>


<div class="btn btn-default" style="float: right;">
<%= form_tag(products_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Buscar Producto" %>
    <%= submit_tag "Buscar", :name => nil %>
<% end %>
</div>

<br>
<br>


<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Nombre</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.photo, size: "60x40") %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'ver', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Producto', new_product_path %>
<div class="hotfix"></div>
</div>