<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :Nombre %>
    <div><%= f.text_field :name %></div>
  </div>

  <div class="field">
    <%= f.label :Precio %>
    <div><%= f.number_field :price %></div>
  </div>

  <div class="field">
    <%= f.label :Foto %>
    <div><%= f.text_field :photo %></div>
  </div>

  <br>

  <div class="field">
    <%= f.label :Categoria %>
    <div style="color:black"><%= f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true, :prompt => "Seleccione una categoria" %></div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Crear producto', class: 'btn btn-primary' %>
  </div>
<% end %>
